@page
@model WebApplication1.Pages.Entrada.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Entradas.ID" />
            <div class="form-group">
                <label asp-for="Entradas.ValorEntrada" class="control-label"></label>
                <input asp-for="Entradas.ValorEntrada" class="form-control" />
                <span asp-validation-for="Entradas.ValorEntrada" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Entradas.NomeEntrada" class="control-label"></label>
                <input asp-for="Entradas.NomeEntrada" class="form-control" />
                <span asp-validation-for="Entradas.NomeEntrada" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Entradas.HoraEntrada" class="control-label"></label>
                <input asp-for="Entradas.HoraEntrada" class="form-control" />
                <span asp-validation-for="Entradas.HoraEntrada" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="form-group">
            <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-page="./Index">Voltar ao Formulário</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
